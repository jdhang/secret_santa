<%= form_for [:admin, @user], html: {class: 'form-horizontal'} do |f| %>
  <%= render "layouts/errors", object: @user %>
  <div class="form-group">
    <%= f.label :first_name, class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :first_name, placeholder: "First Name", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :username, class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :username, placeholder: "Username", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :role, class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :role, placeholder: "Role", class: "form-control" %>
    </div>
  </div>
  
  <%= f.submit @user.new_record? ? "Create" : "Update", class: "btn btn-primary" %>
  <% if @user.new_record? %>
    <%= f.submit "Create and add another", class: "btn btn-info" %>
  <% end %>
  <%= link_to "Back", admin_users_path, class: "btn btn-default" %>
<% end %>