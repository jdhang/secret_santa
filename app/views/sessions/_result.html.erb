<% if current_user.matched %>
  <div class="status">
    <span>You have picked</span>
    <div class="person">
      <span><%= @match.first_name + " " + @match.last_name %>!</span>
    </div>
  </div>
<% else %>
  <div class="status">
    <span>You have not picked another yet!</span>
  </div>
  <div class="pick-notice">
    <span>Randomly pick someone now!</span>
  </div>
  <div class="col-md-6 col-md-offset-3 pick-button">
    <%= link_to "Pick", "/pick", method: "post", remote: true, class: "btn btn-success btn-lg btn-block" %>
  </div>
<% end %>